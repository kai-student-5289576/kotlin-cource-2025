<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Header Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Завдання 1: LinearLayout + FrameLayout"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- Horizontal LinearLayout with nested components -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:weightSum="2">

        <!-- Left section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:background="#E3F2FD">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Лівий блок"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Кнопка 1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введіть текст"
                android:padding="8dp"/>

        </LinearLayout>

        <!-- Right section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:background="#FFF3E0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Правий блок"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Кнопка 2"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Опція 1"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Опція 2"/>

        </LinearLayout>

    </LinearLayout>

    <!-- FrameLayout section with overlapping elements -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FrameLayout з накладанням елементів:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="8dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:background="#E1BEE7">

        <!-- Background image/view -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9C27B0"
            android:layout_margin="8dp"/>

        <!-- Centered text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Базовий шар"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:padding="16dp"
            android:background="#7B1FA2"/>

        <!-- Top-right badge -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEW"
            android:textColor="#FFFFFF"
            android:background="#F44336"
            android:padding="8dp"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"/>

        <!-- Bottom-left button -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дія"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp"/>

    </FrameLayout>

    <!-- Another nested LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#C8E6C9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Додатковий блок"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Варіант А"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Варіант Б"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Варіант В"/>

        </RadioGroup>

    </LinearLayout>

</LinearLayout>

