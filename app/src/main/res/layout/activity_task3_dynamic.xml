<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Header -->
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Завдання 3: Динамічна маніпуляція"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"/>

    <!-- Instructions -->
    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Натисніть 'Перемістити', щоб видалити зелену кнопку з центру та вставити її в іншому місці екрану"
        android:textSize="14sp"
        android:padding="12dp"
        android:background="#FFF3E0"
        android:layout_below="@id/header"
        android:layout_marginTop="16dp"/>

    <!-- Control buttons at top -->
    <Button
        android:id="@+id/moveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Перемістити кнопку"
        android:layout_below="@id/instructions"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"/>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Скинути позицію"
        android:layout_below="@id/instructions"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2196F3"/>

    <!-- The movable button (initially centered) -->
    <Button
        android:id="@+id/movableButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кнопка для переміщення"
        android:textSize="16sp"
        android:padding="24dp"
        android:backgroundTint="#8BC34A"
        android:layout_centerInParent="true"/>

    <!-- Static reference elements -->
    <TextView
        android:id="@+id/topLeftRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Верхній лівий\nкут"
        android:padding="8dp"
        android:background="#FFCCBC"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_below="@id/resetButton"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/topRightRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Верхній правий\nкут"
        android:padding="8dp"
        android:background="#B2DFDB"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/resetButton"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/bottomLeftRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нижній лівий\nкут"
        android:padding="8dp"
        android:background="#D1C4E9"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/bottomRightRef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нижній правий\nкут"
        android:padding="8dp"
        android:background="#F8BBD0"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

